  gem "rspec"
  gem "rspec-rails", ">= 2.0.0.beta"
  gem "capybara"
  gem "cucumber"
  gem "database_cleaner"
  gem "cucumber-rails"
  gem "spork", "0.9.0.rc8"
  gem "launchy"
end

